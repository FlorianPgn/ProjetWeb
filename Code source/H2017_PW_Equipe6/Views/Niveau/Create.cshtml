@model H2017_PW_Equipe6.Models.Niveau

@{
    ViewBag.Title = "Création de niveau";
}

<h2>Création de niveau</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Niveau</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.TypeSECTEUR, "TypeSECTEUR", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TypeSECTEUR", String.Empty)
                @Html.ValidationMessageFor(model => model.TypeSECTEUR)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nomNIVEAU, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomNIVEAU)
                @Html.ValidationMessageFor(model => model.nomNIVEAU)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.descriptionNIVEAU, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.descriptionNIVEAU)
                @Html.ValidationMessageFor(model => model.descriptionNIVEAU)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ordreAffichageNIVEAU, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ordreAffichageNIVEAU)
                @Html.ValidationMessageFor(model => model.ordreAffichageNIVEAU)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour à la liste", "Index")
</div>
