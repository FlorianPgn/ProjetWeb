@model H2017_PW_Equipe6.Models.ConseilAdministration

@{
    ViewBag.Title = "Edit";
    ViewBag.Type = "Conseil d'administration";
}

<nav class="navbar navbar-default navbar-static-top">
    <div class="container-fluid intern-nav">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">@ViewBag.Type</a>
        </div>
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Afficher", "Details")</li>
            <li><a href="#">Ajouter membre</a></li>
        </ul>
    </div>
</nav>

<div class="container">

    <h2>Editeur</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>@ViewBag.Type</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.idCA)

            <div class="form-group">
                @Html.LabelFor(model => model.nomCA, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nomCA)
                    @Html.ValidationMessageFor(model => model.nomCA)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.prenomCA, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.prenomCA)
                    @Html.ValidationMessageFor(model => model.prenomCA)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.descriptionCA, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.descriptionCA)
                    @Html.ValidationMessageFor(model => model.descriptionCA)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.idROLECA, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("idROLECA")
                    @Html.ValidationMessageFor(model => model.idROLECA)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Sauvegarder" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <hr />
    <div>
        @Html.ActionLink("Retour à l'affichage", "Details")
    </div>
</div>