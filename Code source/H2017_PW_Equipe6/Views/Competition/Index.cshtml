@model IEnumerable<H2017_PW_Equipe6.Models.Competition>

@{
    ViewBag.Title = "Compétitions - " + Session["nameClub"];
}


<div class="container">
    <h2>Compétitions</h2>

    @foreach(var competition in Model) {
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3>
                    @competition.nomCOMP
                    <span style="float:right;">@("(" + @competition.dateDebutCOMP.ToShortDateString() + " au " + @competition.dateFinCOMP.ToShortDateString() + ")")</span>
                </h3>
            </div>

            <div class="panel-body">
                <p>@competition.descriptionCOMP</p>
                <p>Lieu: @competition.adresseCOMP</p>

                @if (competition.Photos.Count > 0) {
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" href="@("#liste-photo" + competition.idCOMP)">Photos</a>
                            </h4>
                        </div>
                        <div id="@("liste-photo" + competition.idCOMP)" class="panel-collapse collapse">
                            <div class="panel-body">
                                @foreach (var photo in competition.Photos)
                                {
                                    <img class="img-thumbnail col-md-4 col-xs-6" src="@("~/../../Content/media/photo/competition/" + photo.pathFichier)" />
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>