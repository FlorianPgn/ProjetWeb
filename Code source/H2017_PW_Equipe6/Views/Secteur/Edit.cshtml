@model IEnumerable<H2017_PW_Equipe6.Models.Secteur>

@{
    ViewBag.Title = "Description Secteurs";
    ViewBag.Type = "Secteurs";
}

<nav class="navbar navbar-default navbar-static-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="">@ViewBag.Title</a>
        </div>
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Afficher", "Details", "Secteur")</li>
            <li class="active"><a href="">Modifier</a></li>
            <li>@Html.ActionLink("Créer secteur", "Create")</li>
        </ul>
    </div>
</nav>

<div class="container">

    <h2>Editeur</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>@ViewBag.Type</h4>
            <hr />
            @Html.ValidationSummary(true)

            @foreach (var item in Model) {
                @Html.HiddenFor(modelItem => item.idSECTEUR)

                <div class="form-group">
                    @Html.LabelFor(modelItem => item.nomSECTEUR, new { @class = "control-label col-md-2" })
                    <div class="control-label col-md-2">
                        @Html.TextAreaFor(modelItem => item.nomSECTEUR, new { @class = "form-control" })
                        @Html.ValidationMessageFor(modelItem => item.descriptionSECTEUR)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(modelItem => item.descriptionSECTEUR, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(modelItem => item.descriptionSECTEUR, new { @class = "form-control" })
                        @Html.ValidationMessageFor(modelItem => item.descriptionSECTEUR)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
    }
    <div>
        @Html.ActionLink("Retour à l'affichage", "Details")
    </div>
</div>
