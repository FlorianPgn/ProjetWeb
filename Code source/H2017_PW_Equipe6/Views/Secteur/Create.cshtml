@model H2017_PW_Equipe6.Models.Secteur

@{
    ViewBag.Title = "Description Secteurs";
    ViewBag.Type = "Secteurs";
}

<nav class="navbar navbar-default navbar-static-top">
    <div class="container-fluid intern-nav">
        <div class="navbar-header">
            <a class="navbar-brand" href="">@ViewBag.Title</a>
        </div>
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Afficher", "Details", "Secteur")</li>
            <li data-toggle="modal" data-target="#useModify"><a>Modifier</a></li>
            <li class="active"><a href="#">Créer secteur</a></li>
        </ul>
    </div>
</nav>

<div class="container">

    <h2>Création</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>@ViewBag.Type</h4>
            <hr />
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.nomSECTEUR, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nomSECTEUR)
                    @Html.ValidationMessageFor(model => model.nomSECTEUR)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.descriptionSECTEUR, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.descriptionSECTEUR, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.descriptionSECTEUR)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Créer" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <hr/>
    <div>
        @Html.ActionLink("Retour à l'affichage", "Details")
    </div>
</div>

<div id="useModify" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Non disponible</h4>
            </div>
            <div class="modal-body">
                <p>Pour modifier une description, veuillez passer par l'affichage.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>