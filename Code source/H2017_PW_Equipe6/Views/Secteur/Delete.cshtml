@model IEnumerable<H2017_PW_Equipe6.Models.Secteur>
@{
    ViewBag.Title = "Suppression";
}

<div class="container">

    <h2>@ViewBag.Title</h2>

    <h3>Êtes-vous sûr de vouloir supprimer ce secteur ?</h3>
    <div>
        <h4>Secteur</h4>
        <hr />

        @foreach (var item in Model)
        {
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.nomSECTEUR)
                </dt>

                <dd>
                    @Html.DisplayFor(model => item.nomSECTEUR)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.descriptionSECTEUR)
                </dt>

                <dd>
                    @Html.DisplayFor(model => item.descriptionSECTEUR)
                </dd>

            </dl>
        }
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Supprimer" class="btn btn-danger" /> |
                @Html.ActionLink("Retour", "Details")
            </div>
        }
    </div>
</div>