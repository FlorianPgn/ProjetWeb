@model H2017_PW_Equipe6.Models.Club

@{
    Layout = "~/Views/Shared/_AdministratorLayout.cshtml";
    ViewBag.Title = "Description Club";
    ViewBag.Type = "Description";
}

<nav class="navbar navbar-default navbar-static-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">@ViewBag.Title</a>
        </div>
        <ul class="nav navbar-nav">
            <li class ="active"><a href="">Afficher</a></li>
            <li>@Html.ActionLink("Modifier", "EditDescription", "Club")</li>
        </ul>
    </div>
</nav>

<div class="container">
    <h2>Affichage</h2>

    <div>
        <h4>@ViewBag.Type</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.description)
            </dd>
        </dl>
        <hr />
    </div>
    <p>
        @Html.ActionLink("Editer", "EditDescription") |
        @Html.ActionLink("Retour à l'affichage", "DetailsDescription")
    </p>
</div>