@model H2017_PW_Equipe6.Models.Club

@{
    ViewBag.Title = "Description Club";
    ViewBag.Type = "Description";
}
<nav class="navbar navbar-default navbar-static-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">@ViewBag.Title</a>
        </div>
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Afficher", "DetailsDescription", "Club")</li>
            <li class="active"><a href="">Modifier</a></li>
        </ul>
    </div>
</nav>

<div class="container">   
    <h2>Editeur</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>@ViewBag.Type</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.id)
            
            <div class="form-group">
                @Html.LabelFor(model => model.description, new { @class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.description, new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.description)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default"/>
                </div>
            </div>
            <hr />
        </div>
    }
    <div>
        @Html.ActionLink("Retour à l'affichage", "DetailsDescription")
    </div>
</div>
